@model IEnumerable<ApiConsumerApp.Models.UsersModel>

@{
    ViewBag.Title = "Index";

}

<head>
    @*<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />*@
    <!-- BOOTSTRAP STYLES-->
    <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/assets/css/custom.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center user-image-back">
                        <img src="~/assets/img/find_user.png" class="img-responsive" />

                    </li>
                    <li>
                        <a href="index.html"><i class="fa fa-desktop "></i>Dashboard</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-edit "></i>Users<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="/UsersMVC/ViewUsers">User Details</a>
                            </li>
                            <li>
                                <a href="#">User History</a>
                            </li>
                           
                        </ul>
                    </li>

                     
                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                    <div class="row">
                     
                        <div class="col-md-offset-2 col-md-8 col-md-offset-1"> 

                            <a href="/UsersMVC/CreateUser" class="btn btn-lg btn-success"><span class="glyphicon glyphicon-plus"></span>Add User</a>
                            <br />
                            <hr />
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        @Html.DisplayName("USERS")
                                    </th>

                                </tr>
                                @{ 
                                    if(Model == null)
                                    {
                                        @Html.Label("NO RECORD !!!")
                                    }
                                    else
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>

                                                <td>
                                                    <button class="btn btn-default">@item.Name.Substring(0, 2).ToUpper()</button>  @Html.Label(item.Name.ToUpper())
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                               

                            </table>
                        </div>
                    </div>
                    <!-- /. ROW  -->
                    <hr />

                    <!-- /. ROW  -->
                </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
</body>
 <!-- /. WRAPPER  -->
<!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
<!-- JQUERY SCRIPTS -->
<script src="~/assets/js/jquery-1.10.2.js"></script>
<!-- BOOTSTRAP SCRIPTS -->
<script src="~/assets/js/bootstrap.min.js"></script>
<!-- METISMENU SCRIPTS -->
<script src="~/assets/js/jquery.metisMenu.js"></script>
<!-- CUSTOM SCRIPTS -->
<script src="~/assets/js/custom.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>


<script>
    $(function () {

        var successmessage = '@TempData["Saved"]';
        if (successmessage != "") {
            alertify.success(successmessage);
        }

    });

