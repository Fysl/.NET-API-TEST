        var successmessage = '@TempData["Updated"]';
        if (successmessage != "") {
            alertify.success(successmessage);
        }

    });

    function Delete(id) {
        alertify.confirm('CRUD Operations', 'Are you sure to Delete this Record!!', function () {
            window.location.href = '/UsersMVC/DeleteUser/' + id;
        }, null);
    }
</script>

